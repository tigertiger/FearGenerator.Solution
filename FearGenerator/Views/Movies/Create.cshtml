@{
  Layout ="_Layout";
}
@using FearGenerator.Models
@model FearGenerator.Models.Movie
<div class="container">
  <span>&nbsp;</span>
  <section class=survival>
    <h1 class="survival bleeding">Add a Movie</h1>
    <h4>...if you dare</h4>
    <span>&nbsp;</span>
  </section>
  @using (Html.BeginForm())
  {
    @Html.LabelFor(model => model.Title)<br />
    @Html.TextBoxFor(model => model.Title)<br/><br />
    @Html.Label("Your Rating")<br/>
    @Html.RadioButtonFor(model => model.Stars, 1)<span> 1 Star</span><br />
    @Html.RadioButtonFor(model => model.Stars, 2)<span> 2 Stars</span><br />
    @Html.RadioButtonFor(model => model.Stars, 3)<span> 3 Stars</span><br />
    @Html.RadioButtonFor(model => model.Stars, 4)<span> 4 Stars</span><br />
    @Html.RadioButtonFor(model => model.Stars, 5)<span> 5 Stars</span><br /><br />
    @Html.LabelFor(model => model.Year)<br />
    @Html.TextBoxFor(model => model.Year, new { type = "number", min = "1888", step = "1" })<br /><br />
    @Html.DropDownList("SubgenreId")<br /><br />

    <input type="submit" value="Add Movie"/>

  }
</div>